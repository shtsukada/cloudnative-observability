{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":disableRateLimiting"
  ],
  "labels": ["renovate"],
  "prCreation": "not-pending",
  "packageRules": [
    {
      "description": "Helm charts",
      "matchManagers": ["helm-values", "helm-requirements"],
      "groupName": "helm-charts",
      "schedule": ["after 9am on monday"]
    },
    {
      "description": "Terraform providers/modules",
      "matchManagers": ["terraform"],
      "groupName": "terraform",
      "schedule": ["after 9am on monday"]
    },
    {
      "description": "Go modules",
      "matchManagers": ["gomod"],
      "groupName": "gomod",
      "postUpdateOptions": ["gomodTidy"]
    }
  ]
}
